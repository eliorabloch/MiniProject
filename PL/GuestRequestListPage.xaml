<Page x:Class="PL.GuestRequestListPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="GuestRequestListWindow" Height="680" Width="840">
    <Grid Background="#FF9DC8E6" Margin="10,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="71*"/>
            <ColumnDefinition Width="34*"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="HostingUnitListView" HorizontalAlignment="Left" Height="520" Margin="37,56,0,0" VerticalAlignment="Top" Width="772" SelectionChanged="HostingUnitListView_SelectionChanged" Grid.ColumnSpan="2">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="AddrBtn" Content="Add Request" HorizontalAlignment="Left" Height="61" Margin="326,580,0,0" VerticalAlignment="Top" Width="165" Click="AddBtn_Click" FontFamily="MV Boli" FontSize="16" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="images/button.png"/>
            </Button.Background>
        </Button>
        <Button x:Name="backBtn" Content="" HorizontalAlignment="Left" Height="30" Margin="41,595,0,0" VerticalAlignment="Top" Width="30
                " Click="Button_Click" Foreground="{x:Null}" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="images/arrow.png" />
            </Button.Background>
        </Button>
        <Label Content="Search for request:" HorizontalAlignment="Left" Height="36" Margin="34,10,0,0" VerticalAlignment="Top" Width="283" FontSize="18" FontFamily="MV Boli"/>
        <TextBox x:Name="fullNameSearchTextBox" HorizontalAlignment="Left" Height="25" Margin="306,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="135" TextChanged="fullNameSearchTextBox_TextChanged"/>
        <Label Content="By family name:" HorizontalAlignment="Left" Height="25" Margin="208,17,0,0" VerticalAlignment="Top" Width="95" RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="-0.604"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Label Content="By key:" HorizontalAlignment="Left" Height="33" Margin="483,17,0,0" VerticalAlignment="Top" Width="125" Grid.ColumnSpan="2"/>
        <TextBox x:Name="searchByKeyTextBox" HorizontalAlignment="Left" Height="25" Margin="531,18,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="150" Grid.ColumnSpan="2" TextChanged="searchByKeyTextBox_TextChanged"/>
        <Button x:Name="searchByNameBtn" Content="" HorizontalAlignment="Left" Height="30" Margin="447,15,0,0" VerticalAlignment="Top" Width="30" RenderTransformOrigin="-0.463,3.008" Foreground="{x:Null}" BorderBrush="{x:Null}" Click="searchByNameBtn_Click">
            <Button.Background>
                <ImageBrush ImageSource="images/searchBtn.png" />
            </Button.Background>
        </Button>
        <Button x:Name="searchByKeyBtn" Content="" HorizontalAlignment="Left" Height="30" Margin="126,15,0,0" VerticalAlignment="Top" Width="30" RenderTransformOrigin="-0.463,3.008" Foreground="{x:Null}" BorderBrush="{x:Null}" Grid.Column="1" Click="searchByKeyBtn_Click">
            <Button.Background>
                <ImageBrush ImageSource="images/searchBtn.png" />
            </Button.Background>
        </Button>
    </Grid>
</Page>
