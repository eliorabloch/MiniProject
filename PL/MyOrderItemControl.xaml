<UserControl x:Class="PL.MyOrderItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL"
             mc:Ignorable="d" Height="50
             " Width="434.525">
    <Grid Height="50" VerticalAlignment="Top" Background="#FFD9C8C2" Margin="0,0,16,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="207*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="OrderIdLable" Content="Label" HorizontalAlignment="Left" Margin="14,10,0,0" VerticalAlignment="Top" Height="33" Width="188" FontFamily="Tw Cen MT Condensed Extra Bold"/>
        <ComboBox x:Name="OrderStatusComboBox" HorizontalAlignment="Left" Margin="21,13,0,0" VerticalAlignment="Top" Width="120" Grid.Column="1">
            <ComboBoxItem Content="Not Handled"  />
            <ComboBoxItem Content="Sent Mail" />
            <ComboBoxItem Content="Canceled" />
            <ComboBoxItem Content="Done Deal" />
        </ComboBox>
        <Button x:Name="SaveStatusBtn" Content="Save" Grid.Column="1" HorizontalAlignment="Left" Margin="145,13,0,0" VerticalAlignment="Top" Width="36" Click="SaveStatusBtn_Click"/>

    </Grid>
</UserControl>
