<UserControl x:Class="PL.MyOrderItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PL"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="380">
    <Grid>
        <Label x:Name="OrderIdLable" Content="Label" HorizontalAlignment="Left" Margin="10,34,0,0" VerticalAlignment="Top" Height="33" Width="188"/>
        <ComboBox x:Name="OrderStatusComboBox" SelectionChanged="OrderStatusComboBox_SelectionChanged" HorizontalAlignment="Left" Margin="237,34,0,0" VerticalAlignment="Top" Width="120">
            <ComboBoxItem Content="Not Handled"  />
            <ComboBoxItem Content="Sent Mail" />
            <ComboBoxItem Content="Canceled" />
            <ComboBoxItem Content="Done Deal" />
        </ComboBox>

    </Grid>
</UserControl>
