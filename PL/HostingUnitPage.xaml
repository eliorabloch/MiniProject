<Page x:Class="PL.HostingUnitPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="hostingUnit" Height="680" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>

        <Label Content="Sub Area:" HorizontalAlignment="Left" Height="25" Margin="29,168,0,0" VerticalAlignment="Top" Width="65" FontWeight="Black" Grid.Row="1"/>
        <CheckBox x:Name="HasPoolCheckBox" FontWeight="Black" Content="Pool" HorizontalAlignment="Left" Height="20" Margin="29,148,0,0" VerticalAlignment="Top" Width="111" Grid.Row="1"/>
        <CheckBox x:Name="HasJacuzzCheckBox" FontWeight="Black"  Content="Jacuzz" HorizontalAlignment="Left" Height="19" Margin="29,124,0,0" VerticalAlignment="Top" Width="85" IsChecked="False" Grid.Row="1" />
        <CheckBox x:Name="HasGardanCheckBox" FontWeight="Black" Content="Garden" HorizontalAlignment="Left" Height="22" Margin="29,98,0,0" VerticalAlignment="Top" Width="125" IsChecked="False" Grid.Row="1" />
        <CheckBox x:Name="HasChildrenAttractionsCheckBox" FontWeight="Black" Content="ChildrenAttractions" HorizontalAlignment="Left" Height="22" Margin="29,70,0,0" VerticalAlignment="Top" Width="197" IsChecked="False" Grid.Row="1" />
        <Label Content="Do you have:" HorizontalAlignment="Left" Height="25" Margin="25,40,0,0" VerticalAlignment="Top" Width="187" Grid.Row="1" RenderTransformOrigin="0.584,1.592"/>
        <Label Content="Unit-Type:" HorizontalAlignment="Left" Height="26" Margin="25,223,0,0" VerticalAlignment="Top" Width="69" Grid.Row="1"/>
        <Label Content="Area&#xD;&#xA;Area:" HorizontalAlignment="Left" Height="25" Margin="32,281,0,0" VerticalAlignment="Top" Width="128" Grid.Row="1"/>
        <ComboBox x:Name="AreaComboBox" HorizontalAlignment="Left" Margin="32,311,0,342" Width="143" Grid.Row="1" SelectionChanged="AreaComboBox_SelectionChanged">
            <ComboBoxItem Content="jerusalem" />
            <ComboBoxItem Content="center" />
            <ComboBoxItem Content="north" />
            <ComboBoxItem Content="south" />


        </ComboBox>
        <ComboBox x:Name="UnitTypeComboBox" Height="27" Margin="32,253,625,0" VerticalAlignment="Top" Grid.Row="1" SelectionChanged="UnitTypeComboBox_SelectionChanged">
            <ComboBoxItem Content=" Tzimer"  />
            <ComboBoxItem Content="HostingUnit" />
            <ComboBoxItem Content="HotelRoom" />
            <ComboBoxItem Content="Tent" />
        </ComboBox>
        <Label Content="Name" HorizontalAlignment="Left" Margin="29,10,0,0" Grid.RowSpan="2" VerticalAlignment="Top"/>
        <TextBox x:Name="HostinUnitNameTextBox" HorizontalAlignment="Left" Height="23" Margin="76,14,0,0" Grid.RowSpan="2" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="SubAreaTextBox" HorizontalAlignment="Left" Height="23" Margin="99,173,0,0" Grid.RowSpan="2" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="SaveBtn" Content="Save" HorizontalAlignment="Left" Margin="639,344,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="77" Height="26" Click="SaveBtn_Click"/>
        <Label x:Name="HostingUnitKeyLable" Content="Label" HorizontalAlignment="Left" Margin="216,10,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="136" Foreground="#FF939393"/>
        <Button x:Name="HostInfoBTN" Content="Host-Information" HorizontalAlignment="Left" Height="43" Margin="610,22,0,0" Grid.RowSpan="2" VerticalAlignment="Top" Width="167" Click="HostInfoBTN_Click"/>
        <Button x:Name="backBtn"  HorizontalAlignment="Left" Height="30" Margin="19,395,0,0" VerticalAlignment="Top" Width="30" Click="Back_Click" Grid.RowSpan="2" BorderBrush="{x:Null}">
            <Button.Background>
                <ImageBrush ImageSource="images/arrow.png"/>
            </Button.Background>
        </Button>
    </Grid>
</Page>
